{% extends "layouts/template_base.njk" %}

{% block titulo %}Mi Biblioteca - Identificación{% endblock %}

{% block estilos %}
<link rel="stylesheet" href="/static/css/material-icons.css" />
<link rel="stylesheet" href="/static/css/libros_signin.css" />
{% endblock %}

{% block contenido %}
<header>
  <div class="brand-logo">
    <i class="material-icons md-18">account_balance</i>
  </div>
  <div class="brand-name">Mi Biblioteca</div>
  <div class="account">
    <i class="material-icons">account_box</i>
    <div class="user">
      <i class="material-icons">account_circle</i>
      <div class="user-name"></div>
    </div>
  </div>
</header>

<main>
  <h1>Iniciar Sesión</h1>

  <form action="/signin" method="POST">
    <div class="name-container">
      <label for="name">Usuario</label>
      <input id="name" name="name" type="text" autocomplete="on" />
    </div>
    <div class="pass-container">
      <label for="pass">Contraseña</label>
      <input id="pass" name="pass" type="password" autocomplete="on" />
    </div>
    <div class="buttons-container">
      <button type="submit">Identificarse</button>
      <button type="reset">Borrar datos</button>
    </div>
  </form>
</main>
{% endblock %}

{% block scripts %}
<script src="/static/js/libros_signin.js"></script>
{% endblock %}